{%- include('partials/header') -%}

<div id="buttons" class="d-grid col-6 mx-auto gap-2">
  <a href="/admin/blog">
    <button id="blog" type="button" class="btn btn-primary">
      Blog Requests
      <span class="badge text-bg-success"
        >{%= details?.detailsBlog?.totalRecords %}</span
      >
    </button>
  </a>
  <a href="/admin/category">
    <button id="category" type="button" class="btn btn-primary">
      Category Requests
      <span class="badge text-bg-success"
        >{%= details?.detailsCategory?.totalRecords %}</span
      >
    </button>
  </a>
  <a href="/admin/comment">
    <button id="comment" type="button" class="btn btn-primary">
      Comment Requests
      <span class="badge text-bg-success"
        >{%= details?.detailsComment?.totalRecords %}</span
      >
    </button>
  </a>
  <a href="/admin/comment">
    <button id="report" type="button" class="btn btn-primary">
      Report Requests
      <span class="badge text-bg-success"
        >{%= details?.detailsReport?.totalRecords %}</span
      >
    </button>
  </a>
</div>
{%- include('partials/footer') -%}



